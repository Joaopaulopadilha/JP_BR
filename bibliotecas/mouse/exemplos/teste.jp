importar mouse
importar tempo

saida("Movendo mouse em 2 segundos...")
tempo.dormir(2000)

# Pega posição atual
x = mouse.x()
y = mouse.y()
saida("Posicao inicial: " + x + ", " + y)

# Move suavemente para 500, 500
mouse.ir_para_suave(500, 500, 10, 5)

# Clica
mouse.clique()

saida("Feito!")
loop:
    a = mouse.x()
    b = mouse.y()
    saida("posicao atual: {a}, {b}")
    tempo.dormir(10)