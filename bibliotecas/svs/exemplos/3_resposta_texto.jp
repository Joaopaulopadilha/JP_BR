# exemplo_texto.jp
# Exemplo de servidor SVS com resposta em texto simples

importar svs

porta = svs.criar(8080)
ip = svs.meu_ip()
saida("Servidor em: {ip}:{porta}")

enquanto verdadeiro:
    req = svs.aguardar(porta)
    saida("Requisição recebida!")
    saida("Método: " + svs.metodo(req))
    saida("Caminho: " + svs.caminho(req))
    
    svs.responder(req, 200, "Olá! Servidor JPLang funcionando!")
