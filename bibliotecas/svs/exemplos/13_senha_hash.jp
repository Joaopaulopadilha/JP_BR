# 13_loggin_hash.jp
# Exemplo de sistema de login com senha hasheada (SHA-256 + salt)

importar svs
importar texto
importar hash

porta = svs.criar(8080)
ip = svs.meu_ip()
saida("Servidor em: {ip}:{porta}")

# Usuário cadastrado com senha hasheada
# A senha original é "1234", mas armazenamos apenas o hash
# Para gerar um novo hash, use: hash.senha("sua_senha")
usuario_correto = "admin"
senha_hash = "cU3wyarFPl4u6sjE$2980e4bde5ebe7921ccf724cdd53d45033f3e5fd25301b2999619924382a461a"

pagina_login = """
