"""

pagina_painel = """
<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>Painel</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background: linear-gradient(135deg, #0f3443, #34e89e);
            color: white;
        }
        .painel {
            background: rgba(255,255,255,0.1);
            padding: 50px;
            border-radius: 12px;
            text-align: center;
        }
        h1 {
            margin-bottom: 20px;
        }
        a {
            color: #fff;
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="painel">
        <h1>Bem-vindo ao Painel!</h1>
        <p>Você está logado com sucesso.</p>
        <p><a href="/">Sair</a></p>
    </div>
</body>
</html>
"""

enquanto verdadeiro:
    req = svs.aguardar(porta)
    caminho = svs.caminho(req)
    metodo = svs.metodo(req)
    
    se caminho == "/":
        svs.responder_html(req, 200, pagina_login)
    
    ou_se caminho == "/login":
        se metodo == "POST":
            dados = svs.corpo(req)
            
            usuario = texto.dividir(dados, ":", 0)
            senha = texto.dividir(dados, ":", 1)
            
            saida("Tentativa de login - Usuario: {usuario}")
            
            se usuario == usuario_correto:
                # Verifica senha usando hash (não compara texto plano!)
                se hash.verificar(senha, senha_hash):
                    saida("Login bem sucedido!")
                    svs.responder(req, 200, "ok")
                senao:
                    saida("Senha incorreta!")
                    svs.responder(req, 200, "erro")
            senao:
                saida("Usuario incorreto!")
                svs.responder(req, 200, "erro")
        senao:
            svs.responder(req, 405, "Método não permitido")
    
    ou_se caminho == "/painel":
        svs.responder_html(req, 200, pagina_painel)
    
    senao:
        svs.responder(req, 404, "Não encontrado")
