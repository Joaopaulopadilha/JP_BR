importar svs

porta = svs.criar(8080)
svs.pasta(porta, "/static", "public/")


enquanto verdadeiro:
    req = svs.aguardar(porta)
    caminho = svs.caminho(req)
    
    # Tenta servir arquivo estático primeiro
    se svs.servir_estatico(req, porta) == 1:
        continuar
    
    # Rotas normais
    se caminho == "/":
        svs.arquivo(req, "public/index.html")
    senao:
        svs.responder(req, 404, "Não encontrado")