importar svs

porta = svs.criar(8080)
ip = svs.meu_ip()
saidal("servidor rodando em:")
saida_amarelo(ip + ":" + porta)

enquanto verdadeiro:
    req = svs.aguardar(porta)
    caminho = svs.caminho(req)
    
    se caminho == "/":
        svs.arquivo(req, "index.html")
    senao:
        svs.responder(req, 404, "NÃ£o encontrado")